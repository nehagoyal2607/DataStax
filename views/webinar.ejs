<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>Webinar</title>
  <meta content="" name="description">
  <meta content="" name="keywords">

  <!-- Favicons -->
 <link href="./Maxim/assets/img/favicon.png" rel="icon">
 <link href="./Maxim/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

 <!-- Google Fonts -->
 <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

 <!-- Vendor CSS Files -->
 <link href="./Maxim/assets/vendor/aos/aos.css" rel="stylesheet">
 <link href="./Maxim/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
 <link href="./Maxim/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
 <link href="./Maxim/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
 <link href="./Maxim/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
 <link href="./Maxim/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
 <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
 <!-- Template Main CSS File -->

 <link href="./Maxim/assets/css/style.css" rel="stylesheet">
 <style>
   input[type="text"]{
    margin-bottom: 0.5em;
    padding: 0.5em;
    border: 1.3px solid gray;
    width: 300px;
   }
 </style>
 <script>
   function createToggle(){
    var x = document.getElementById("webinarInputs");
    if (x.style.display === "block") {
      x.style.display = "none";
    } else {
      x.style.display = "block";
    }
   }
 </script>
</head>

<body>

  <!-- ======= Header ======= -->
  <header id="header" class="fixed-top d-flex align-items-center">
    <div class="container d-flex justify-content-between">

      <div class="logo">
        <h1><a href="index.html">Unify</a></h1>
        <!-- Uncomment below if you prefer to use an image logo -->
        <!-- <a href="index.html"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->
      </div>

      <nav id="navbar" class="navbar">
        <ul>
          <li><a class="nav-link scrollto" href="/">Home</a></li>
          <li><a class="nav-link scrollto" href="/dash#portfolio">Practice</a></li>
          <li><a class="nav-link scrollto " href="/gesture">Talk With Signs</a></li>
          <li class="dropdown"><a href="#"><span>Translate</span> <i class="bi bi-chevron-down"></i></a>
            <ul>
              <li><a href="/translate">English To ASL</a></li>
              <li><a href="/translateTwo">ASL to English</a></li>
            </ul>
          </li>
          <li><a class="nav-link scrollto" href="/pagination">Common Words</a></li>
          <li class="dropdown"><a href="#" class="active"><span>Connect</span> <i class="bi bi-chevron-down"></i></a>
            <ul>
              <li><a href="/webinar">Webinar</a></li>
              <li><a href="/forum">Forum</a></li>
            </ul>
          </li>
          <li><a class="nav-link scrollto" href="/profile">Profile</a></li>
          <li><a class="nav-link scrollto" href="/logout">Log Out</a></li>
        </ul>
        <i class="bi bi-list mobile-nav-toggle"></i>
      </nav><!-- .navbar -->

    </div>
  </header><!-- End Header -->
  <!-- ======= Hero Section ======= -->
  <section id="hero" class="d-flex flex-column justify-content-center align-items-center">
    <div class="container text-center text-md-left" data-aos="fade-in">
      <h1>Feel Connected</h1>
      <h2>Attend a webinar, or Host one!</h2>
      <!-- <h2>Hey <%=currentUser.username%></h2> -->
      <a href="#inner-page-webinar" class="btn-get-started scrollto" style="margin-right: 0.7em;">Begin</a>
    </div>
  </section><!-- End Hero -->
  <main id="main">

    

    <section class="inner-page" style="padding: 0;" id="inner-page-webinar">
      <div class="container container-top">
        <p>
          <div class="btn-get-started scrollto createWebinarToggle" onclick="createToggle()" style="cursor: pointer;">Create A Webinar</div>
        </p>
        <form id="webinarInputs" method="POST" action="/addWebinar">
          <div><input type="text" name = "title" placeholder="Meeting Title" style="margin-bottom: 0.5em" required></div>
          <div><input type="text" name = "meetingId" placeholder="Meeting ID" style="margin-bottom: 0.5em" required></div>
          <div><input type="text" name = "timings" placeholder="Timings" style="margin-bottom: 0.5em" required></div>
          <div><input type="text" name = "host" placeholder="Host" style="margin-bottom: 0.5em" required></div>
          <div><input type="text" name = "description" placeholder="Description" style="margin-bottom: 0.5em" required></div>
          <input type="submit" class="btn btn-get-started">
        </form>
      </div>
    </section>  
      <section id="portfolio" class="portfolio section-bg" style="padding-top: 2em;">
      <div class="container container-bottom">
        <p>
          <h2>Upcoming Webinars</h2>
        </p>
        <div class="row portfolio-container" data-aos="fade-up" style="margin-top: 1.5em;">
          <%for(let i=0; i<webinars.length; i++){%>
            <div class="col-lg-6 col-md-6 portfolio-item filter-app">
              <div class="webinarDiv shadow rounded">
                <div class="d-flex justify-content-between">
                <div class="webinarTitle"><h3><%=webinars[i].title%></h3></div>
                <div class="webinarTimings"><%=webinars[i].timings%></div>
                </div>
                <div class="webinarHost">Host- <%=webinars[i].host%></div>
                <div class="webinarDescription"><%=webinars[i].description%></div>
                <p></p>
                <div class="d-flex justify-content-end">
                <div class="webinarJoin"><a href="/webinar/<%=webinars[i].meetingId%>" class="btn-get-started scrollto">JOIN</a></div>
                </div>
              </div>
              </div>
          <%}%>
        </div>
      </div>
      </section>

  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  <%- include ("./partials/footer.ejs") %>
  <!-- End Footer -->

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Vendor JS Files -->
  <script src="./Maxim/assets/vendor/aos/aos.js"></script>
  <script src="./Maxim/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="./Maxim/assets/vendor/glightbox/js/glightbox.min.js"></script>
  <script src="./Maxim/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="./Maxim/assets/vendor/php-email-form/validate.js"></script>
  <script src="./Maxim/assets/vendor/swiper/swiper-bundle.min.js"></script>

  <!-- Template Main JS File -->
  <script src="./Maxim/assets/js/main.js"></script>

</body>

</html>