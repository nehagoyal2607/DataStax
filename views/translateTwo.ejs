 <script>
   let symbol = "<%=sample.alphabet%>".split(",");
   function translateTwo(alpIndex){
        console.log(alpIndex);
        const alphabet = symbol[alpIndex];   
        let pbody = $(".translateResult");
        const html = `<div>${alphabet}</div>`;
        pbody.append(html);
   }
   function clearDiv(){
        $(".translateResult").empty();
   }
   function clearLastLetter(){
        $(".translateResult > div").last().remove();
   }
   function insertSpace(){
       const html = "<div>&nbsp</div>";
       $(".translateResult").append(html);
   }
