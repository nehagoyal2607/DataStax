    if(text.length!=0){
        for(let i = 0; i<text.length; i++){
          if(text.charAt(i)==' '){
            
          } else{
            text = text.toLowerCase();
            let pos = text.charCodeAt(i)-97;
            arr.push(pos);
          }
        }   
    } else{
      alert("Enter text");
    }
    console.log(arr);
    let parts = symbol.split(",");
    console.log(parts[0]);
    for(let i = 0; i<arr.length; i++){
        const html = `<div class="translateItems">
              <img height = "125px" width = "100px" src="${parts[arr[i]]}" alt="">
